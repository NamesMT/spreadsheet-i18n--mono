{
  "name": "spreadsheet-i18n--mono",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "lint": "turbo run lint",
    "test:types": "turbo run test:types",
    "quickcheck": "turbo run quickcheck",
    "dev": "dotenvx run -- turbo run dev:prepare && dotenvx run -- turbo run dev",
    "build": "dotenvx run -- turbo run build",
    "deploy": "dotenvx run -- turbo run deploy",
    "i18n": "pnpm dlx lingo.dev run",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "pathe": "^2.0.3",
    "std-env": "^3.9.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@dotenvx/dotenvx": "1.11.4",
    "@namesmt/utils": "^0.5.16",
    "@types/node": "^22.16.4",
    "eslint": "^9.31.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "deep-equal": "npm:@nolyfill/deep-equal@^1",
      "is-generator-function": "npm:@nolyfill/is-generator-function@^1",
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1",
      "safer-buffer": "npm:@nolyfill/safer-buffer@^1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
