{
  "name": "backend",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "dotenvx run -f .env.local.ignored -f .env.local -f .env -- tsx src/index.ts",
    "watch": "dotenvx run -f .env.local.ignored -f .env.local -f .env -- tsx watch src/index.ts",
    "lint": "eslint .",
    "test": "vitest",
    "test:types": "tsc --noEmit --skipLibCheck",
    "quickcheck": "pnpm run lint && pnpm run test:types",
    "check": "pnpm lint && pnpm test:types && vitest run --coverage",
    "dev": "pnpm run watch",
    "stub": "obuild --stub",
    "build": "dotenvx run -f .env.prod.local -f .env -- obuild"
  },
  "dependencies": {
    "srvx": "^0.7.1"
  },
  "devDependencies": {
    "@local/common": "workspace:*",
    "@local/locales": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@namesmt/utils": "^0.5.13",
    "@vitest/coverage-v8": "^3.1.4",
    "consola": "^3.4.2",
    "obuild": "^0.2.0",
    "std-env": "^3.9.0",
    "vitest": "^3.1.4"
  }
}
